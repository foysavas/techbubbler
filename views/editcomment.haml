= haml :news_item, :locals => {:news => @news}
= haml :comment_html, :locals => {:c => @comment, :u => @user}
%form.nice{:name=>"f"}
  %input{:type => :hidden, :name => "news_id", :value => @news["id"]}
  %input{:type => :hidden, :name => "comment_id",:value => params["comment_id"]}
  %input{:type => :hidden, :name => "parent_id", :value => -1}
  %textarea.large{:name => "comment", :cols => 60, :rows => 10}= H.entities @comment['body']
  %button.button.white.radius.medium.nice{:name => "post_comment"} Edit
#errormsg

.note Note: to remove the comment remove all the text and press Edit.

:javascript
  $(function() {
      $("button[name=post_comment]").click(post_comment);
  });
